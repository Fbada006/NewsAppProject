<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/list_item_height"
    android:layout_margin="@dimen/item_layout_margin"
    app:cardBackgroundColor="@color/item_background"
    app:cardElevation="@dimen/item_card_elevation"
    app:cardPreventCornerOverlap="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/item_layout_margin">

        <TextView
            android:id="@+id/news_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="bottom"
            android:maxLines="1"
            android:padding="@dimen/activity_main_text_padding"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:text="This is the title of the news article" />

        <TextView
            android:id="@+id/news_section"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/news_title"
            android:gravity="top"
            android:padding="@dimen/activity_main_text_padding"
            android:textSize="15sp"
            tools:text="Section" />

        <TextView
            android:id="@+id/news_author"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/news_section"
            android:gravity="bottom"
            android:padding="@dimen/activity_main_text_padding"
            android:text="Maisarah Tito Chai"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="15sp"
            tools:text="Name1 + Name2" />

        <TextView
            android:id="@+id/news_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@id/news_title"
            android:gravity="bottom"
            android:padding="@dimen/item_date_text_view_padding"
            android:textSize="15sp"
            tools:text="Section" />
    </RelativeLayout>

</android.support.v7.widget.CardView>